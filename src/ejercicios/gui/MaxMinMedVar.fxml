<GridPane alignment="CENTER" hgap="15.0" vgap="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ejercicios.gui.MaxMinMedVarControlador">
   <columnConstraints>
      <ColumnConstraints maxWidth="197.0" minWidth="167.0" prefWidth="195.0" />
      <ColumnConstraints maxWidth="78.0" minWidth="21.0" prefWidth="78.0" />
      <ColumnConstraints maxWidth="171.0" minWidth="120.0" prefWidth="120.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label text="Calcula máximo, mínimo, media y varianza" GridPane.columnSpan="3">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label fx:id="numNotas" text="Introduce la nota nº 1 :" GridPane.rowIndex="2">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="nota" onAction="#introducirNota" prefHeight="27.0" prefWidth="57.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
